{
  "semi": true,
  "printWidth": 100,
  "trailingComma": "es5",
  "plugins": ["@prettier/plugin-php"],
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "tabWidth": 4,
        "singleQuote": true
      }
    },
    {
      "files": "*.vue",
      "options": {
        "tabWidth": 2,
        "singleQuote": false,
      }
    }
  ]
}
